{
  "version": 1,
  "hooks": {
    "postToolUse": [
      {
        "type": "command",
        "bash": "./.github/hooks/scripts/validate-python.sh",
        "comment": "Run Ruff and mypy on modified Python files",
        "timeoutSec": 60
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "./.github/hooks/scripts/run-tests.sh",
        "comment": "Run unit tests at the end of the session",
        "timeoutSec": 120
      }
    ]
  }
}
