{
  "version": 1,
  "hooks": {
    "postToolUse": [
      {
        "type": "command",
        "bash": "./scripts/validate-python.sh --no-block",
        "comment": "Run Black, Ruff and mypy on modified Python files (non-blocking)",
        "timeoutSec": 60
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "./scripts/validate-python.sh --block",
        "comment": "Final validation of Python files (blocking)",
        "timeoutSec": 60
      },
      {
        "type": "command",
        "bash": "./scripts/validate-tests.sh --block",
        "comment": "Run unit tests at the end of the session (blocking)",
        "timeoutSec": 120
      }
    ]
  }
}
