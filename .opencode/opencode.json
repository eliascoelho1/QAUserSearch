{
    "$schema": "https://opencode.ai/config.json",
    "tui": {
        "scroll_speed": 1,
        "scroll_acceleration": {
            "enabled": true
        }
    },
    "permission": {
        "bash": {
            "./specify *": "allow",
            "./specify*": "allow",
            "git *": "allow",
            "git commit *": "deny",
            "git push *": "deny",
            "sudo *": "deny",
            "gh pr *": "allow",
            "gh auth status": "allow",
            "rm -rf *": "ask",
            ":(){:|:&};:": "deny",
            "pytest *": "allow",
            "ruff *": "allow",
            "uv run ruff *": "allow",
            "mypy *": "allow",
            "uv run mypy *": "allow",
            "python *": "allow",
            "python -m py_compile *": "allow",
            "uv run *": "allow",
            "pwd": "allow",
            "ls": "allow",
            "ls *": "allow",
            "mkdir *": "allow",
            "touch *": "allow",
            "cp *": "allow",
            "mv *": "allow",
            "find *": "allow",
            "grep *": "allow",
            "rg *": "allow",
            "head *": "allow",
            "tail *": "allow",
            "cat *": "allow",
            "wc *": "allow",
            "sort *": "allow",
            "uniq *": "allow",
            "diff *": "allow",
            "echo *": "allow",
            "date": "allow",
            "which *": "allow",
            "type *": "allow",
            "env *": "ask",
            "printenv *": "ask",
            "*": "ask"
        },
        "lsp": "allow",
        "skill": "allow",
        "webfetch": "allow",
        "question": "allow",
        "external_directory": "ask",
        "read": {
            "*": "allow",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.env.example": "allow"
        },
        "edit": "allow",
        "write": "allow"
    },
    "instructions": [
        "./README.md",
        "./AGENTS.md",
        "./docs/architecture.md"
    ],
    "formatter": {
        "ruff": {
            "command": [
                "uv",
                "run",
                "ruff",
                "format",
                "$FILE"
            ],
            "extensions": [
                ".py",
                ".pyi"
            ]
        }
    },
    "agent": {
        "explore": {
            "description": "Fast codebase exploration and file search",
            "mode": "subagent",
            "model": "anthropic/claude-sonnet-4-5",
            "temperature": 0.1,
            "maxSteps": 20,
            "tools": {
                "read": true,
                "write": false,
                "edit": false,
                "bash": false,
                "grep": true,
                "glob": true,
                "list": true
            }
        }
    },
    "lsp": {
        "pyright": {
            "disabled": true
        },
        "basedpyright": {
            "disabled": false,
            "command": [
                "basedpyright-langserver",
                "--stdio"
            ],
            "extensions": [
                ".py",
                ".pyi"
            ]
        }
    },
    "keybinds": {
        "input_newline": "shift+return,ctrl+return,alt+return,ctrl+j"
    }
}